html
  include head
  body
    include header
    main.d-flex.flex-column.justify-content-center.align-items-center.h-100
      section.my-3.p-4.bg-white.rounded-4.shadow.w-50.mx-auto
        h1= message
        h2= error.status
        if error.stack
          .alert.alert-danger.py-2.px-3.my-4(role="alert")
            span Error Details:
            button.btn.btn-sm.ms-2(data-bs-toggle="collapse", data-bs-target="#errorStack") &#x25BC;
            #errorStack.collapse.mt-2
              pre #{error.stack}
    include footer